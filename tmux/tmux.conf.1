#  modes
 setw -g clock-mode-colour colour5
 setw -g mode-attr bold
 setw -g mode-fg colour15
 setw -g mode-bg colour124

 # panes
 set -g pane-border-bg colour124
 set -g pane-border-fg colour203
 set -g pane-active-border-bg colour203
 set -g pane-active-border-fg colour124

 # statusbar
 set -g status-position bottom
 set -g status-justify left
 set -g status-bg colour124
 set -g status-fg colour137
 set -g status-attr dim
 set -g status-left ''
 set -g status-right '#[fg=colour225,bg=colour53,bold] %b %d #[fg=colour253,bg=colour0,bold] %I:%M %p '
 set -g status-right-length 50
 set -g status-left-length 20

 setw -g window-status-current-fg colour203
 setw -g window-status-current-bg colour15
 setw -g window-status-current-attr bold
 setw -g window-status-current-format ' #I#[fg=colour249]:#[fg=colour238]#W#[fg=colour203]#F '

 setw -g window-status-fg colour124
 setw -g window-status-bg colour7
 setw -g window-status-attr none
 setw -g window-status-format ' #I#[fg=colour250]:#[fg=colour244]#W#[fg=colour237]#F '

 setw -g window-status-bell-attr bold
 setw -g window-status-bell-fg colour255
 setw -g window-status-bell-bg colour1

 # messages
 set -g message-attr bold
 set -g message-fg colour16
 set -g message-bg colour232
